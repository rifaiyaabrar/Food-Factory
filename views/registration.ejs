<%- include('./partials/header', {name, is_admin}); %>
  <main class='container d-flex justify-content-center align-items-center w-70 h-70 pt-5'>
    <form action='/registration' method="POST" class='container' style='width: 20rem'>
      <% if (locals.type, locals.message) { %>
        <div class="alert alert-<%= type %>" role="alert">
          <div class="alert-message" align="center">
            <strong>
              <%= message %>
            </strong>
          </div>
        </div>
        <% } else { %>
          <h3 class='text-center mb-2'>SIGN UP</h3>
          <% } %>
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" name="name" id="name">
            </div>
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input type="text" class="form-control" name="username" id="username">
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" name="email" id="email">
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" name="password" id="password">
            </div>
            <div class="mb-3">
              <label for="phone" class="form-label">Phone</label>
              <input type="number" class="form-control" name="phone" id="phone">
            </div>
            <div class="mb-3">
              <label for="address" class="form-label">Address</label>
              <input type="text" class="form-control" name="address" id="address">
            </div>
            <div class="col-auto">
              <input type="submit" value='Create new account' class="btn btn-primary mb-3 w-100">
              <div class='float-end'> or, <a href="/signin">Sign in</a></div>
            </div>
            </section>
  </main>
  <%- include('./partials/end'); %>